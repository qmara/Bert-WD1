Unit converter


conversion_rate = 0.621371
print("Pozdravljeni")

while True:
    kilometers = int(input("Vnesi število kilometrov, ki jih hočeš pretvoriti v milje: "))
    miles = kilometers * conversion_rate
    print(kilometers,"kilometrov je enako",miles,"milj")
    nova_konverzija = str(input("Odgovori z YES, če želiš ponovno pretvoriti kilometre v milje: "))
    if nova_konverzija != "YES":
        print("Hvala za uporabo pretvornika")
        break
        
        

FIZZBUZZ

number = int(input("Vnesi celo število med 1 in 100: "))

for i in range(1, number+1):
    if i % 3 == 0 and i % 5 == 0:
        print("Fizzbuzz")
    elif i % 3 == 0:
        print("Fizz")
    elif i % 5 == 0:
        print("buzz")
    else:
        print(i)

LOWERCASE

text = input("Vnesi tekst z velikimi tiskanimi črkami: ")
print("Tukaj je preobražen tekst:")
print(text.lower())
